<script src="~/view-resources/Views/Product/lib/jquery.min.js"></script>

<link href="~/fileinput/css/fileinput.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/fileinput/themes/explorer-fa/theme.css" media="all" rel="stylesheet" type="text/css" />
<script src="~/fileinput/js/plugins/sortable.js" type="text/javascript"></script>
<script src="~/fileinput/js/fileinput.js" type="text/javascript"></script>
<script src="~/fileinput/js/locales/fr.js" type="text/javascript"></script>
<script src="~/fileinput/js/locales/es.js" type="text/javascript"></script>
<script src="~/fileinput/themes/explorer-fa/theme.js" type="text/javascript"></script>
<script src="~/fileinput/themes/fa/theme.js" type="text/javascript"></script>

<style>

    .box {
        width: 350px;
        height: 720px;
        background: black;
        position: relative;
        margin-top: 10px;
        border-radius: 30px;
    }

        .box .top {
            width: 100%;
            height: 50px;
            border-radius: 30px 30px 0 0;
        }

        .box .center {
            width: 95%;
            height: 620px;
            background-color: #ffffff;
            margin-left: 2.5%;
        }

        .box .bottom {
            width: 100%;
            height: 45px;
            border-radius: 0 0 30px 30px;
        }

        .box .top .r {
            width: 8px;
            height: 8px;
            background: white;
            position: absolute;
            left: 50%;
            margin-left: -4px;
            border-radius: 100%;
            top: 5px;
        }

        .box .top .l {
            width: 10px;
            height: 10px;
            background: white;
            position: absolute;
            border-radius: 100%;
            left: 30%;
            top: 20px;
        }

        .box .top .ri {
            width: 60px;
            height: 6px;
            background: white;
            position: absolute;
            border-radius: 20%;
            left: 50%;
            top: 22px;
            margin-left: -30px;
        }

        .box .bottom .tome {
            width: 30px;
            height: 30px;
            position: absolute;
            left: 50%;
            margin-left: -15px;
            background: white;
            box-shadow: 0 0 2px 2px #C9C9C9;
            border-radius: 100%;
            bottom: 10px;
        }
</style>

<div class="body">

    <form name="createForm" role="form" novalidate class="form-validation" >
        <div class="modal-body">
            <div class="row clearfix">
                <div class="col-sm-3">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" id="Code" name="Code">
                            <label for="Code" class="form-label">页面代号</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" id="FullName" name="FullName">
                            <label for="FullName" class="form-label">页面名称</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" id="Description" name="Description">
                            <label for="Description" class="form-label">描述</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="file-loading">
                    <label>Preview File Icon</label>
                    <input id="file-3" type="file" multiple>
                </div>
            </div>

            <div class="row clearfix">

                <div class="col-sm-6">
                    <div class="box">
                        <div class="top">
                            <div class="r"></div>
                            <div class="l"></div>
                            <div class="ri"></div>
                        </div>
                        <div class="center">
                            <iframe height="100%" width="100%" id="pageHtml" src="@string.Format("/codepage/{0}/mobile/template.html",ViewBag.UserName)"></iframe>
                        </div>
                        <div class="bottom">
                            <div class="tome"></div>
                        </div>
                    </div>

                </div>

                <div class="col-sm-6">
                    <div contenteditable="true">
                        <iframe scrolling="no" id="pageLabel" style="width:350px; height: 720px;padding-top:15px" src="@string.Format("/codepage/{0}/label/template.html",ViewBag.UserName)" height="95%"></iframe>
                    </div>

                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" onClick="location.href='@Url.Action("Index")'">@L("Cancel")</button>
                <button type="submit" class="btn btn-primary waves-effect">创建</button>
            </div>
        </div>
    </form>


</div>


<script src="~/view-resources/Views/Product/Create.js" asp-append-version="true"></script>

<script type="text/javascript">
    $("#file-3").fileinput({
        theme: 'fa',
        showUpload: false,
        showCaption: false,
        browseClass: "btn btn-primary btn-lg",
        fileType: "any",
        previewFileIcon: "<i class='glyphicon glyphicon-king'></i>",
        overwriteInitial: false,
        initialPreviewAsData: true,
        initialPreview: [
            "http://localhost:62114/codepage/nne/content/6366838210985937502669724.jpg"
        ],
        initialPreviewConfig: [
            { caption: "transport-1.jpg", size: 329892, width: "120px", url: "{$url}", key: 1 },
            { caption: "transport-2.jpg", size: 872378, width: "120px", url: "{$url}", key: 2 },
            { caption: "transport-3.jpg", size: 632762, width: "120px", url: "{$url}", key: 3 }
        ]
    });
</script>